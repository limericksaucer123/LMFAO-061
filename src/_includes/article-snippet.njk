<li>
        <article class="post">

          <img
            src="{{ post.data.image | default('/images/ufo.jpg') }}"
            alt="{{ post.data.imageAlt | default('') }}"
            class="post-image"
          >

          <div class="post-preview">
            <h1>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h1>

            <i class="fa-regular fa-user"></i>
            {{ post.data.author }}

            &nbsp;

            <i class="fa-regular fa-calendar"></i>
            {{ post.date.toLocaleDateString("en-GB") }}

            <p class="preview-text">
              {{ post.data.excerpt }}
            </p>

            <a href="{{ post.url }}" class="btn read-more">
              Read More
            </a>
          </div>

        </article>
      </li>